@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Chaotic Random Generator Number</h1>
    <p class="lead">This web page will use Chaos principes and a Pseudo-Random Generator number as seeder of this process. </p>



    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <h2> Theoric Principles</h2>
    <div class="col-md-6">
        <h4>Logistic Map Theory</h4>
        <p class="text-justify">

        </p>
    </div>
    <div class="col-md-6">
        <h4>Chaotic Random Number Generator</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Single Generator Number</h2>
        <p>
            @using (Ajax.BeginForm("GetSingle", "Home", new AjaxOptions
            {
                UpdateTargetId = "single",
                HttpMethod = "post",
                AllowCache = false,
                LoadingElementId = "loading",
                InsertionMode = InsertionMode.Replace
            }))
            {
                <input type="submit" value="Generate" class="btn btn-default" />
            }

            <div id="single">
                <h5 id="loading">
                    @*//install font awesome
                        Install-Package FontAwesome*@
                    <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
                </h5>

            </div>

        </p>
    </div>
    <div class="col-md-6">
        <h2> Web Api Json random numbers</h2>
        <a href="@Url.Action("ChaoticArray", "api")">
            <div class="btn btn-default">Get JSON</div>
        </a>


    </div>
</div>

@section scripts{

    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

}