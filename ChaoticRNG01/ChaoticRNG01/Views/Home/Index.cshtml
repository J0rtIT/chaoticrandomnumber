@{
    ViewBag.Title = "Home Page";
}

<div> &nbsp;</div>

<div class="jumbotron">
    <h1>Chaotic Random Generator Number</h1>
    <p class="lead">From Pseudo-Random generator number to real chaotic Random Generator. </p>
</div>

<div class="row">

    <div class="col-md-5">
        <h2>Logistic Map Theory</h2>
        <p class="text-justify">
            This WebApp uses a Pseudo-Random number generator using the .Net class called <a href="https://msdn.microsoft.com/en-us/library/system.random(v=vs.110).aspx">Random</a> introduced in .Net 4.5 as pesudo-random number generator that meets statistical requiremets for randomness (<a href="http://referencesource.microsoft.com/#mscorlib/system/random.cs,bb77e610694e64ca">Source Code</a>). Now using this generator and the <a href="https://en.wikipedia.org/wiki/Logistic_map">Logistic Map</a> equation using the parameter r=4 to be sure to be in the chaotic response and iterate the equation a thousand times
        </p>
    </div>
    <div class="col-md-1">
        &nbsp;
    </div>
    <div class="col-md-6">
        <h2>Chaotic Random Number Generator</h2>
        <h3 class="text-center">
            Xn+1 = r Xn (1 - Xn) <br /> <br />
        </h3>
        <h4 class="text-center">
            Parameters
            r =4.0, iterations = 2000, transcient = 1000.
        </h4>

    </div>
</div>

<div class="row">
    <div class="col-md-5">
        <h2>Single Generator Number</h2>
        <p>
            @using (Ajax.BeginForm("GetSingle", "Home", new AjaxOptions
            {
                UpdateTargetId = "single",
                HttpMethod = "post",
                AllowCache = false,
                LoadingElementId = "loading",
                InsertionMode = InsertionMode.Replace
            }))
            {
                <div class="text-center">
                    <input type="submit" value="Generate" class="btn btn-primary" />
                </div>
            }

            <div id="single">
                <h5 id="loading">
                    @*//install font awesome
                        Install-Package FontAwesome*@
                    <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
                </h5>

            </div>

        </p>
    </div>
    <div class="col-md-1">
        &nbsp;
    </div>
    
    
    <div class="col-md-6">
        <h2> Web Api Json random numbers</h2>
        <h3>Use: <b>http://localhost:25708/api/ChaoticArray</b> In JSON Format</h3>
        <p>
            @using (Ajax.BeginForm("GetMultiple","Home", new AjaxOptions
            {
                UpdateTargetId = "multiple",
                HttpMethod = "post",
                AllowCache = false,
                LoadingElementId = "mloading",
                InsertionMode = InsertionMode.Replace
            }))
            {
                <div class="text-center">
                    <input type="submit" value="Get JSON" class="btn btn-primary" />
                </div>
            }

            <div id="multiple">
                <h5 id="mloading">
                    @*//install font awesome
                        Install-Package FontAwesome*@
                    <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
                </h5>
            </div>

        </p>
    </div>
    
    

